
<EditForm Model="@Sucursal" OnValidSubmit="@OnValidSubmit">
    <div class="form-field">
        <label>Nombre:</label>
        <div>
            <InputText @bind-Value="@Sucursal.Nombre" />
            <ValidationMessage For="@(() => Sucursal.Nombre)" />
        </div>
    </div>

    <button type="submit" class="btn btn-success">@TextoBoton</button>
    <DataAnnotationsValidator />
</EditForm>

@code {
    [Parameter] public Sucursal Sucursal { get; set; } = new Sucursal();
    [Parameter] public String TextoBoton { get; set; } = "Salvar Cambios";
    [Parameter] public EventCallback OnValidSubmit { get; set; }
}
